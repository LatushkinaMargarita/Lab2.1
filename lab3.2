#include <iostream>
#include <algorithm>
using namespace std;
int* rez(int mas[100], int  n)
{
	int *rezult = new int[3];
	sort(mas, mas + n);
	if (mas[0] * mas[1] * mas[n - 1] > mas[n - 2] * mas[n - 3] * mas[n - 1])
	{
		rezult[0] = mas[0];
		rezult[1] = mas[1];
		rezult[2] = mas[n - 1];
	}
	else
	{
		rezult[0] = mas[n - 3];
		rezult[1] = mas[n - 2];
		rezult[2] = mas[n - 1];
	}

	return rezult;
}

